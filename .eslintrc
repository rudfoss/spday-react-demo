{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-var": 2,
    "no-unused-vars": ["warn"],
    "no-extra-boolean-cast": 0,
    "eqeqeq": ["warn", "smart"],
    "no-console": 0,
    "semi": [1, "always"],
    "no-trailing-spaces": 1,
    "indent": ["error", 2],
    "no-alert": 1,
    "no-debugger": 2,
    "no-lone-blocks": 2,
    "import/no-named-as-default": 0,
    "import/no-unresolved": 0
  }
}